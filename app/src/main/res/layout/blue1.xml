<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/UI1_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent" >

            <ImageView
                android:id="@+id/ui1_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/iv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/dianchi"
                android:gravity="center"
                android:padding="2dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/back_white" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="10dp" >

                <ImageView
                    style="@style/BlueUI3Button"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_off"
                    style="@style/BlueUI3Button"
                    android:src="@drawable/ui6_btn_off_bg" />

                <ImageView
                    style="@style/BlueUI3Button"
                    android:visibility="invisible" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tv_1"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_1" />

                <ImageView
                    android:id="@+id/tv_2"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_2" />

                <ImageView android:id="@+id/tv_3"
                     style="@style/BlueUI3Button"
                     android:background="@drawable/ui_btn_bg_3" >
                </ImageView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tv_4"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_4" />

                <ImageView
                    android:id="@+id/tv_5"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_5" />

                <ImageView
                    android:id="@+id/tv_6"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_6" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tv_7"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_7" />

                <ImageView
                    android:id="@+id/tv_8"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_8" />

                <ImageView
                    android:id="@+id/iv_h"
                    style="@style/BlueUI3Button"
                    android:src="@drawable/ui1_baofa" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

</FrameLayout>