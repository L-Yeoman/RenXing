<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/UI2_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_theme" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <!-- 标题栏 -->

        <RelativeLayout
            android:id="@+id/ii_common_music"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:color/transparent" >

            <ImageView
                android:id="@+id/ui2_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/iv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:background="@drawable/dianchi"
                android:gravity="center"
                android:padding="2dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="8dp"
                android:src="@drawable/back_white" />
        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ii_common_music">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tv_1"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_1" />

                <ImageView
                    android:id="@+id/tv_2"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_2"/>

                <ImageView
                    android:id="@+id/tv_3"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_3"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tv_4"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_4"/>

                <ImageView
                    android:id="@+id/tv_5"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_5" />

                <ImageView
                    android:id="@+id/tv_6"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_6"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/tv_7"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_7" />

                <ImageView
                    android:id="@+id/tv_8"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_8"/>

                <ImageView
                    android:id="@+id/tv_9"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_9"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >
 				<TextView
                    style="@style/BlueUI3Button"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/tv_10"
                    style="@style/BlueUI3Button"
                    android:background="@drawable/ui_btn_bg_10"/>
                <TextView
                    style="@style/BlueUI3Button"
                    android:visibility="invisible"/>
               
            </TableRow>
 			<TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.05"
                android:background="#7e384b">
                
           </TableRow>
            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/pao" />

                <TextView
                    style="@style/BlueUI3Button"
                    android:visibility="invisible" />
 			<ImageView
                    android:id="@+id/iv_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ui6_btn_off_bg" />
               <!--  <Button
                    android:id="@+id/click_Control_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ui_happyclick_bg" /> -->
            </TableRow>
        </TableLayout>
    </RelativeLayout>

</FrameLayout>