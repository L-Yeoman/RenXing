<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/bbs_bg_send_normal"
            android:padding="3dp"
            android:text="置顶"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
            <TextView
                android:id="@+id/like_jinghua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#4ecdc4"
                android:padding="3dp"
                android:text="精华"
                android:layout_marginLeft="2dp"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/like_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#1571FA"
                android:padding="3dp"
                android:layout_marginLeft="2dp"
                android:text="热帖"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right"
            android:layout_marginRight="5dp"
            android:singleLine="true"
            android:text="这是我的标题"
            android:textColor="#333333"
            android:textSize="15sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#999999"
        android:maxLines="2"
        android:lineSpacingExtra="2dp"
        android:textSize="13sp" />
    <LinearLayout
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:scaleType="centerInside"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="钻石王老五"
            android:layout_toLeftOf="@+id/time"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_bbs_people"
            android:layout_marginRight="2dp"
            android:textColor="#D8267E"
            android:textSize="12sp"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:text="3小时前"
            android:layout_marginTop="3dp"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:text="99"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:drawablePadding="3dp"
            android:drawableLeft="@drawable/ic_comment"
            android:layout_height="wrap_content"/>
        </RelativeLayout>
</LinearLayout>