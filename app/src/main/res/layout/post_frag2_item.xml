<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <CheckBox
        android:id="@+id/checkbox"
        style="@style/CustomCheckboxTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/checkbox"
        android:orientation="vertical"

        android:paddingTop="15dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/bbs_item_title"
            style="@style/bbs_gray_title_font"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="张三丰了" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/bbs_item_time"
                style="@style/bbs_gray_small_font"
                android:drawableLeft="@drawable/ic_time"
                android:layout_alignParentRight="true"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="3分钟前" />
                <TextView
                    android:id="@+id/bbs_item_reply"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  android:layout_toLeftOf="@id/bbs_item_time"
                    android:layout_marginRight="30dp"
                    android:text="我:喜欢上了男同事,怎么暗示他让他哈哈哈,打飞机的解放军肯定"
                    android:singleLine="true"
                    android:textSize="13sp"
                    android:textColor="@color/app_gray_font" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="@color/app_gray_font"/>
    </LinearLayout>

</RelativeLayout>
